{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "docs/src/*"
      ],
      "@@/*": [
        "packages/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "docs/src/**/*.ts",
    "docs/src/**/*.tsx",
    "docs/src/**/*.vue",
    "packages/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
